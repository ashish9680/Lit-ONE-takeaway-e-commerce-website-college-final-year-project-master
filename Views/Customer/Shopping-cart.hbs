{{#if products}}
{{#each products}}
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-10">
			<div class="card top-of-50 bottom-of-50">
				<header class="card-header bg-primary">
					<h4 class="card-title mt-2 text-white">Shopping cart</h4>
				</header>
				<article class="card-body">
					<div class="row">
						<div class="col-md-3 text-center">
							<img src="{{this.item.productImage}}" alt="" width="150">
						</div>
						<div class="col-md-4">
							{{this.title}}
						</div>
						<div class="col-md-2">
							<div class="text-center top-of-20">
								<a href="/reduce/{{this.item._id}}" class="">
									<i class="fa fa-minus-square-o" aria-hidden="true"></i>
								</a>
								{{this.qty}}
								<a href="/addByOne/{{this.item._id}}" class="">
									<i class="fa fa-plus-square-o" aria-hidden="true"></i>
								</a>
							</div>

						</div>
						<div class="col-md-2">
							<div class="text-center top-of-20">
								â‚¹ {{this.item.productPrice}}
							</div>
						</div>
					</div>
				</article>
			</div>
		</div>
	</div>
	<div class="row bottom-of-50">
		<div class="col-md-12 top-of-50 justify-content-center">
			<strong>Total Payment : {{this.totalPrice}}</strong>
			<div class="text-right">
				<a href="/Checkout" class="btn btn-primary">
					Checkout
				</a>
			</div>
		</div>
	</div>
</div>
{{/each}}
{{else}}
<div class="text-center top-of-50">
	No Products in your Shopping Cart
</div>
{{/if}}