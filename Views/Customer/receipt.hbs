<div class="container">
	<div class=" top-of-20 bottom-of-20 card">
		<div class="card-header text-center">
			<h3>Retail Invoice / Bill</h3>
		</div>
		<div class="card-body">
			<h4>Sold by </h4> {{data.sellerId.email}}
			<hr>
			<h6>Order ID : {{data.id}}</h6>
			<h6 style="width: 350px; height: 20px; overflow-y: hidden;">Order Date & Time:
				{{data.createdAt}}</h6>
			<div class="row">
				<div class="col-sm-4 offset-sm-8 text-right">
					<h6>Shipping Address :
						<div class="top-of-20">
							{{data.customerAddress}}
						</div>
					</h6>
				</div>
			</div>
			<hr>
			<div class="container table-responsive-sm">
				<table class="table table-striped table-bordered text-center">
					<thead>
						<tr>
							<th>Product</th>
							<th>Qty</th>
							<th>Price (₹)</th>
							<th>Total (₹)</th>
						</tr>
					</thead>
					<thead>
						<tr>
							<td class="text-center">
								<div style="width: 300px; overflow-y: hidden">
									{{data.cart.productName}}
								</div>
							</td>
							<td>
								1
							</td>
							<td>
								{{data.cart.productPrice}}
							</td>
							<td>
								{{data.amountPaid}}
							</td>
						</tr>
					</thead>
				</table>
				<div class="text-right">
					<h5>Grand Total : ₹ {{data.amountPaid}} /- </h5>
				</div>
			</div>
		</div>
		<div class="card-footer text-right">
			Authorized by takeaway seller : <b>{{data.sellerId.email}}</b>
		</div>
	</div>

</div>