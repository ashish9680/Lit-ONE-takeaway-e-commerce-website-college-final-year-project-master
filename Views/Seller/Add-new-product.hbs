{{#if user.isSeller}}
{{!-- Add new product --}}

<div class="container top-of-50">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<h3>
					Add new Product
				</h3>
			</div>
			<div class="card-content">
				<div class="container">
					<form class="row top-of-20" class="was-validated" action="/postProduct" method="POST">
						<div class="form-group col-md-6">
							<label for="name">Product Name</label>
							<div class="invalid-feedback">Please fill out this field.</div>
							<input type="name" name="title" class="form-control" id="email">
						</div>
						<div class="form-group col-md-6">
							<label for="img">Product Image URL</label>
							<input type="img" name="image" class="form-control" id="email">
						</div>
						<div class="form-group col-md-12">
							<label for="comment">Product Description</label>
							<textarea class="form-control" name="desc" rows="5" id="desc"></textarea>
						</div>
						<div class="form-group col-md-6">
							<label for="price">Price</label>
							<input type="number" name="price" class="form-control" id="price">
						</div>
						<div class="form-group col-md-6">
							<label for="Qty">Quantity</label>
							<input type="number" name="qty" class="form-control" id="Qty">
						</div>
						<div class=" form-group col-md-12 ml-auto">
							<button type="submit" class="btn btn-primary ">
								Add new product
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

{{else}}
401 Access denied.
{{/if}}